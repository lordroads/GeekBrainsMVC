@model IEnumerable<Employee>

@{
    ViewBag.Title = "Сотрудники";
}

<h1>Сотрубники</h1>

<a asp-action="Create" class="btn btn-success">Создать</a>

@{
    if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>ДР</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="text-danger">
                            <i class="fa fa-trash-alt"></i>
                        </a>
                    </td>
                    <td>@employee.Id</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id">@employee.LastName</a>
                    </td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Birthday.ToString("d")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id">
                            <i class="fa fa-user-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>Сотрудников пока нет.</p>
    }
}